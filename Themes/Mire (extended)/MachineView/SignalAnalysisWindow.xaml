            <SolidColorBrush x:Key="GridLinesBrush" Color="#FF9A8181"/>
            <Color x:Key="VUMeterBackgroundColor">#333</Color>
            <SolidColorBrush x:Key="VUMeterBackgroundBrush">#333</SolidColorBrush>
